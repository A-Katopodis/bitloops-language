{
  "name": "@bitloops/bl-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript boilerplate code for Bitloops Language generated projects",
  "engines": {
    "node": ">= 13"
  },
  "homepage": "https://github.com/bitloops/bitloops-language/tree/main/boilerplate/ts/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitloops/bitloops-language"
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "keywords": [
    "bitloops language",
    "bl",
    "typescript",
    "bdd",
    "ddd",
    "hexagonal architecture",
    "ports & adapters",
    "behavior driven development",
    "boilerplate",
    "core"
  ],
  "devDependencies": {
    "@types/uuid": "^8.3.4"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build"
  },
  "files": [
    "lib/**/*"
  ],
  "author": "Bitloops S.A.",
  "license": "GPL-3.0",
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  }
}
